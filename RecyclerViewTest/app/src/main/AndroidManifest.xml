<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.will.Playground">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.Playground">

        <activity
            android:name=".ListsActivity"
            android:label="@string/app_name"
            android:launchMode="singleTop"
            android:theme="@style/Theme.Playground.ListsActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".OtherActivity"
            android:label="OtherActivitanga"
            android:launchMode="singleTop"
            android:parentActivityName=".ListsActivity" />

        <activity
            android:name=".NavigationActivity"
            android:label="NavigationActivitanga"
            android:launchMode="singleTop" />
    </application>

</manifest>
