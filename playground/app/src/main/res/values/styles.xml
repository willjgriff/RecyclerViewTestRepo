<resources>

    <!-- Base application theme. -->
    <style name="Theme.Playground" parent="Theme.AppCompat.Light.NoActionBar">
        <!--Maybe needed to prevent getSupportActionBar() returning null...-->
        <item name="android:windowActionBar">true</item>

        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="colorPrimary">@color/primary</item>

        <item name="android:text">sty</item>
    </style>

    <style name="Theme.Playground.Navigation" parent="Theme.Playground">
    </style>

    <style name="FragmentTheme" parent="Theme.Playground">
        <item name="android:background">@color/background</item>
    </style>

    <style name="Toolbar" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:background">@color/primary</item>
    </style>

    <style name="Text">
    </style>

    <style name="Text.Title">
        <item name="android:textSize">@dimen/title</item>
    </style>

    <style name="ButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/lite_text</item>
        <item name="android:textSize">@dimen/button</item>
        <item name="android:paddingLeft">@dimen/xsmall</item>
        <item name="android:paddingRight">@dimen/xsmall</item>
        <item name="colorButtonNormal">@color/accent</item>
    </style>

</resources>
