<resources>

    <!-- Base application theme. -->
    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <!--Maybe needed to prevent getSupportActionBar() returning null...-->
        <item name="android:windowActionBar">true</item>

        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="colorPrimary">@color/primary</item>
    </style>

    <style name="AppTheme" parent="AppTheme.Base">
    </style>

    <style name="Theme.Playground.Navigation" parent="AppTheme">
    </style>

    <style name="Theme.Playground.FabCoord" parent="AppTheme">
    </style>

    <style name="Theme.Playground.ToolbarCoord" parent="AppTheme">
    </style>

    <style name="FragmentTheme" parent="AppTheme">
        <item name="android:background">@color/bg_main</item>
    </style>

    <style name="ActionBarTheme" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:background">@color/primary</item>
    </style>

    
    
    <style name="FabLabel" parent="Text">
        <item name="android:textSize">@dimen/button</item>
        <item name="android:textColor">@color/lite_text</item>
        <item name="android:background">@color/bg_dark</item>
        <item name="android:paddingLeft">@dimen/xxsmall</item>
        <item name="android:paddingRight">@dimen/xxsmall</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
    </style>
    
    <style name="Text">
    </style>

    <style name="Text.Title">
        <item name="android:textSize">@dimen/title</item>
        <item name="android:textColor">@color/primary_text</item>
    </style>

    <style name="Text.Subtitle">
        <item name="android:textSize">@dimen/subtitle</item>
        <item name="android:textColor">@color/secondary_text</item>
    </style>

    <style name="ButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/lite_text</item>
        <item name="android:textSize">@dimen/button</item>
        <item name="android:paddingLeft">@dimen/xsmall</item>
        <item name="android:paddingRight">@dimen/xsmall</item>
        <item name="colorButtonNormal">@color/accent</item>
    </style>

</resources>
