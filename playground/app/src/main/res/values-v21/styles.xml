<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="AppTheme.Base">
        <!--Make the status bar transparent-->
        <item name="android:windowTranslucentStatus">true</item>

    </style>

    <style name="Theme.Playground.FabCoord" parent="AppTheme">
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@color/primary</item>

    </style>

    <style name="Theme.Playground.RecyclerItem" parent="AppTheme">
        <item name="android:windowContentTransitions">true</item>
    </style>

    <style name="Theme.Playground.ToolbarCoord" parent="AppTheme">
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@color/accent</item>
    </style>

</resources>