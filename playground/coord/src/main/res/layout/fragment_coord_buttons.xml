<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:theme="@style/FragmentTheme">

    <Button
        android:id="@+id/fragment_coord_buttons_fab_coord"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ButtonStyle"
        android:text="@string/fragment_coord_buttons_title"/>

    <Button
        android:id="@+id/fragment_coord_buttons_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ButtonStyle"
        android:text="@string/fragment_coord_buttons_toolbar_coordinator_layout"/>

</LinearLayout>